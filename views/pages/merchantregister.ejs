<% include ../partials/header %>

    <center style="margin-top: 60px;">
        <h1><u>Merchant On-boarding</u></h1>
        <p>All fields are required!!</p>
        <div class="container" style="margin-top: 40px;">
            <form action="/register/merchant" method="POST">
                <div class="form-group" style="margin: 10px;">
                    <input type="email" class="form-control" placeholder="Enter email" name="email" required>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="password" class="form-control" placeholder="Password" name="password" required>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="text" class="form-control" placeholder="Firm Name" name="name" required>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="text" class="form-control" placeholder="Address" name="address" required>
                </div>
                <div class="form-group" style="margin: 10px;">

                    <input type="number" class="form-control" placeholder="Interest Amount" name="interestAmount" required>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="text" class="form-control" placeholder="Razorpay Key Id" name="keyId" required>
                </div>
                <div class="form-group" style="margin: 10px;">
                    <input type="text" class="form-control" placeholder="Razorpay Key Secret" name="apiKey" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </center>

    <% include ../partials/footer %>